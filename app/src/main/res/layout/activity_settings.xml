<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.coen390.team_d.heartratemonitor.SettingsActivity">

    <com.jjoe64.graphview.GraphView
        android:layout_width="368dp"
        android:layout_height="200dp"
        android:id="@+id/graphSet"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calibration"
        android:background="@color/colorAccent"
        android:paddingEnd="8dp"
        android:paddingStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/graphSet"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"/>

    <View
        android:layout_width="400dp"
        android:layout_height="1dp"
        android:background="@color/colorDivider"
        app:layout_constraintTop_toBottomOf="@+id/button"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"/>

    <EditText
        android:id="@+id/nameEditText"
        android:hint="Name"
        android:inputType="textPersonName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/button" />

    <EditText
        android:id="@+id/ageEditText"
        android:hint="Age"
        android:inputType="number"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:ems="10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nameEditText"
        android:layout_alignEnd="@+id/nameEditText"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/nameEditText"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <Button
        android:text="Save Profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/profileSaveButton"
        android:visibility="visible"
        android:onClick="profileSaveButtonClick"
        android:background="@color/colorAccent"
        android:paddingEnd="8dp"
        android:paddingStart="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/ageEditText"
        android:layout_marginLeft="8dp"/>

    <View
        android:layout_width="400dp"
        android:layout_height="1dp"
        android:background="@color/colorDivider"
        app:layout_constraintTop_toBottomOf="@+id/profileSaveButton"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"/>


</android.support.constraint.ConstraintLayout>
